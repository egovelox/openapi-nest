{
  "name": "openapi-nest",
  "version": "0.0.1",
  "description": "Tools for openapi spec-first with Nest",
  "engines": {
    "node": ">=18.16.1"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run prettier && tsc",
    "clean": "rimraf ./lib",
    "prettier": "prettier \"src/**/*.+(ts)\" --write --log-level warn",
    "prepare": "npm run build"
  },
  "keywords": [
    "spec-first",
    "contract-first",
    "openapi 3",
    "nest",
    "nestjs",
    "nest express",
    "nestjs expressjs",
    "swagger",
    "typescript",
    "typescript code generation",
    "request validation",
    "response validation",
    "middleware",
    "nodejs"
  ],
  "author": "egovelox",
  "license": "MIT",
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "10.1.0",
    "@nestjs/platform-express": "10.2.8",
    "cosmiconfig": "9.0.0",
    "express-openapi-validator": "5.1.0",
    "openapi-typescript": "6.7.1",
    "read-pkg-up": "7.0.1",
    "swagger-ui-express": "5.0.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/swagger-ui-express": "4.1.4",
    "@types/express": "4.17.19",
    "@types/node": "18.16.1",
    "openapi-types": "12.1.3",
    "prettier": "3.0.0",
    "rimraf": "5.0.5",
    "typescript": "5.1.6"
  },
  "bin": {
    "openapi-nest": "lib/command.js"
  },
  "files": [
    "/lib", "openapi.yml"
  ]
}
